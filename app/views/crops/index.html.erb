<% if user_signed_in? %>
  <center><%= link_to "New Crop", new_crop_path, class: "btn btn-success" %></center>
<% end %>


<h3 id ="h3h" class="center" style="color: white;"> Crop Selection </h3>
<div id="crops" class="transitions-enabled">
  <% @crops.each do |crop| %>
    <div class="boxc panel panel-default">
      <h5 class="center title">
        <b><%= crop.title %></b>
      </h5>
      <%= link_to image_tag(crop.image.url(:large)), crop_symptoms_path(crop) %>
    
      <% if user_signed_in? %>
        <div class="panel-footer">
          <%= link_to 'Show', crop_path(crop) %>
          | <%= link_to 'Edit', edit_crop_path(crop) %>
          | <%= link_to 'Destroy', crop_path(crop),
                          method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      <% end %>
      
    </div>
  <% end %>
</div>

<% if user_signed_in? %>
  <br>
<% end %>

<div class="center">
  <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>






