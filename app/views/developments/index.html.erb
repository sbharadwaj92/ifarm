<div id="developments" class="transitions-enabled">
  <% @crop.developments.each do |development| %>
    <div class="box panel panel-default">
      <h4 class="center">
        <%= development.title %>
      </h4>
      <%= link_to image_tag(development.image.url(:med)), crop_development_path(@crop,development) %>
      <div class="panel-body">

          <%= link_to 'Show', crop_development_path(@crop,development) %>
          <%= link_to 'Edit', edit_crop_development_path(@crop,development) %>
          <%= link_to "Destroy", [development.crop,development],
                          method: :delete, data: { confirm: 'Are you sure?' } %>

      </div>
    </div>
  <% end %>
</div>