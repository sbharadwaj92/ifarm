<h3 id ="h3h" class="center" style="color: #005126;"> Language Selection </h3>
<div id="languages" class="transitions-enabled">
  <% @languages.each do |language| %>
    <div class="boxl panel panel-default">
      <h5 class="center title">
        <b><%= language.title %></b>
      </h5>
      <%= link_to image_tag(language.image.url(:large)), home_path %>
    </div>
  <% end %>
</div>

<% if false %>
  <div class="panel-body">

      <%= link_to 'Show', language_path(language) %>
      <%= link_to 'Edit', edit_language_path(language) %>
      <%= link_to 'Destroy', language_path(language),
                      method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>